
@rendermode InteractiveServer

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">LiveBus</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="collapse navbar-collapse @(collapseNavMenu ? "" : "show")" id="navMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="rutas">
                <span class="oi oi-list" aria-hidden="true"></span> Rutas
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="autobuses">
                <span class="oi oi-map" aria-hidden="true"></span> Autobuses en Vivo
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="admin/rutas">
                <span class="oi oi-map" aria-hidden="true"></span> Administrador
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private void ToggleNavMenu()
    {
        try
        {
            collapseNavMenu = !collapseNavMenu;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error en ToggleNavMenu: {ex.Message}");
        }
    }
}
