@page "/"

<PageTitle>LiveBus - Inicio</PageTitle>

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col">
            <h1>Bienvenido a LiveBus</h1>
            <p class="lead">Sistema de gestión y seguimiento de autobuses en tiempo real.</p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Rutas disponibles</h5>
                    <p class="card-text">Consulta todas las rutas disponibles en nuestro sistema.</p>
                    <a href="/rutas" class="btn btn-primary">Ver rutas</a>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Autobuses en tiempo real</h5>
                    <p class="card-text">Visualiza todos los autobuses activos en el mapa.</p>
                    <a href="/autobuses" class="btn btn-primary">Ver mapa en vivo</a>
                </div>
            </div>
        </div>
    </div>
</div>
